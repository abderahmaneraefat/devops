pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo "Checking out the code from GitHub..."
                git branch: 'main', credentialsId: 'githubtoken', url: 'https://github.com/abderahmaneraefat/devops.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'echo "Starting Docker build..."'  // Message de débogage
                sh 'docker build -t my-backend-image:latest -f ../Dockerfile . --no-cache --progress=plain'  // Ajout de la commande avec options de débogage
                sh 'echo "Docker image built!"'  // Message pour vérifier que la commande a bien terminé
            }
        }

        stage('Run Docker Compose') {
            steps {
                echo "Starting services with Docker Compose..."
                sh 'echo "Starting Docker Compose..."'  // Message de débogage
                sh 'docker-compose -f docker-compose.yaml up -d'  // Exécution de Docker Compose
                sh 'echo "Docker Compose started!"'  // Message pour vérifier que Docker Compose a démarré
            }
        }

        stage('Test Application') {
            steps {
                echo "Running tests on the application..."
                sh 'echo "Running pytest tests..."'  // Message de débogage
                sh 'pytest ../tests/test_app.py'  // Lancer les tests avec pytest
                sh 'echo "Tests completed!"'  // Message pour vérifier que les tests ont bien été exécutés
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "Pushing Docker image to Docker Hub..."
                withCredentials([usernamePassword(credentialsId: 'githubtokenn', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    // Connexion à Docker Hub avec les credentials
                    sh 'echo "Logging in to Docker Hub..."'
                    sh 'docker login -u $DOCKER_USER -p $DOCKER_PASS'
                    sh 'echo "Docker login successful!"'
                    
                    // Taguer l'image Docker avec le nom d'utilisateur et l'image
                    sh 'echo "Tagging Docker image..."'
                    sh 'docker tag my-backend-image:latest $DOCKER_USER/my-backend-image:latest'
                    sh 'echo "Docker image tagged!"'
                    
                    // Pousser l'image vers Docker Hub
                    sh 'echo "Pushing Docker image to Docker Hub..."'
                    sh 'docker push $DOCKER_USER/my-backend-image:latest'
                    sh 'echo "Docker image pushed to Docker Hub!"'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "Deploying to Kubernetes..."
                sh 'echo "Applying Kubernetes configurations..."'
                sh 'kubectl apply -f kubernetes.yml'
                sh 'echo "Kubernetes deployment completed!"'
            }
        }
    }
}
