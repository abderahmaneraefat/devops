pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo "Checking out the code from GitHub..."
                git branch: 'main', credentialsId: 'githubtoken', url: 'https://github.com/abderahmaneraefat/devops.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    bat '''
                        echo Starting Docker build...
                        docker build -t my-backend-image:latest -f Dockerfile . --no-cache --progress=plain
                        echo Docker image built successfully!
                    '''
                }
            }
        }

        stage('Run Docker Compose') {
            steps {
                script {
                    echo "Starting services with Docker Compose..."
                    bat '''
                        echo Pulling latest images...
                        docker-compose pull
                        echo Starting Docker Compose...
                        docker-compose up -d
                        echo Docker Compose started successfully!
                    '''
                }
            }
        }

        stage('Test Application') {
            steps {
                script {
                    echo "Running tests on the application..."
                    bat '''
                        echo Running pytest tests...
                        pytest tests/test_app.py
                        echo Tests completed successfully!
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo "Pushing Docker image to Docker Hub..."
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        bat '''
                            echo Logging in to Docker Hub...
                            echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                            echo Docker login successful!

                            echo Tagging Docker image...
                            docker tag my-backend-image:latest $DOCKER_USER/my-backend-image:latest
                            echo Docker image tagged!

                            echo Pushing Docker image to Docker Hub...
                            docker push $DOCKER_USER/my-backend-image:latest
                            echo Docker image pushed to Docker Hub successfully!
                        '''
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "Deploying to Kubernetes..."
                    bat '''
                        echo Applying Kubernetes configurations...
                        kubectl apply -f kubernetes.yml
                        echo Kubernetes deployment completed successfully!
                    '''
                }
            }
        }
    }
}
